<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   
    <LinearLayout
        android:id="@+id/currentSearchLayout"
        android:layout_width="match_parent" 
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
	    
	    <SearchView
	        android:id="@+id/currentSearchBar"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:focusable="true"
	        android:queryHint="@string/search_text" >
	    </SearchView>
	    
	    
	</LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent" 
        android:layout_height="35dip"
        android:layout_marginBottom="5dip"
        android:orientation="horizontal" >
    
	    <Button
		    android:id="@+id/currentTypeButton"
		    style="@style/ColumnButtonCurent"
		    android:text="@string/sort_type"
		    android:layout_weight= "3" />
		<Button
		    android:id="@+id/currentEntryButton"
		    style="@style/ColumnButtonCurent"
		    android:text="@string/sort_entry"
		    android:layout_weight= "5" />
		<Button 
		    android:id="@+id/currentAmountTextview"
		    style="@style/ColumnButtonCurent"
		    android:text="@string/sort_amount"
		    android:layout_weight= "3"/>
    
	</LinearLayout>
	
    <ListView
        android:id="@id/android:list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>