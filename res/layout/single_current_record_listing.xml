<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dip"
    android:paddingTop="5dip"
    android:orientation="horizontal" >
	
    	<LinearLayout
    	    style="@style/ColumnEntryCurrent"
            android:layout_weight="6"
            android:gravity="center"
            android:orientation="vertical">
    		<TextView
	            android:id="@+id/singleCurrentListingDateTextView"
	            style="@style/ColumnEntryCurrent"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="14sp"
	            android:gravity="center|right"
	            android:text="@string/text_default"/>
	    	
	    	<TextView
	            android:id="@+id/singleCurrentListingWarehouseTextView"
	            style="@style/ColumnEntryCurrent"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="14sp"
	            android:gravity="right"
	            android:text="@string/text_default" />    
    	</LinearLayout>
    	
		<ImageView      
		    style="@style/ColumnEntryCurrent"
            android:layout_weight="3"
            android:gravity="right" 
            android:layout_gravity="center"  
            android:layout_marginLeft="15dip"  
			android:id="@+id/singleCurrentListingInoroutImage"
			android:contentDescription="@string/sort_type">      
		</ImageView>   
		
        <TextView
            android:id="@+id/singleCurrentListingAmountTextView"
            style="@style/ColumnEntryCurrent"
            android:layout_weight="2"
            android:gravity="center|right"
            android:layout_gravity="center"
            android:text="@string/text_default" />
        
        <TextView
            android:id="@+id/singleCurrentListingUnitTextView"
            style="@style/ColumnEntryCurrent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:layout_gravity="center"
            android:text="@string/text_default" />	

        <ImageView      
		    android:id="@+id/singleCurrentListingStatusImage"
		    style="@style/ColumnEntryCurrent"
            android:layout_weight="3"
            android:gravity="center"   
            android:layout_gravity="center"  
			android:contentDescription="@string/sort_type">      
		</ImageView>
        
</LinearLayout>