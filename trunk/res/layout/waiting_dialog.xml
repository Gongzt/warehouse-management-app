<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_height="200dip"
    android:background="@drawable/wait_dialog">

    <LinearLayout 
	    android:orientation="horizontal"
	    android:layout_width="match_parent"
	    android:layout_gravity="center"
	    android:gravity="center"
	    android:layout_marginTop="25dip"
	    android:layout_height="wrap_content">
	    
	    <ProgressBar
	        android:id="@+id/waitDialogProfressBar"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" />
	
	    <TextView
	        android:id="@+id/waitingDialogTypeText"
	        android:textColor="#fff"
	        android:paddingLeft="3dip"
	        android:paddingRight="3dip"
	        android:layout_width="wrap_content"
	        android:textSize="22sp"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:text="@string/text_default"
	        />
	    <TextView
	        android:id="@+id/waitingDialogProgressText"
	        android:textColor="#fff"
	        android:paddingRight="5dip"
	        android:layout_width="wrap_content"
	        android:textSize="22sp"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:text="@string/text_default"
	        />
    </LinearLayout>
    
    <SeekBar
        android:id="@+id/waitDialogSeekBar"
        android:layout_width="235dip"
        android:layout_height="0dip"
        android:layout_weight="1" />
</LinearLayout>