<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView
	        android:id="@+id/singleRecordTitle"
	        android:layout_height="wrap_content"
			android:layout_width="wrap_content"  
			android:layout_centerVertical="true"  
	        android:textSize="14sp"
	        android:textColor="#ffffff"
	        android:layout_alignParentLeft="true" 
	        android:text="@string/text_default" />    
    	

    
    <ImageButton
            android:id="@+id/singleRecordPassButton"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:src="@drawable/icon_accept"
            android:background="@drawable/actionbar_button"
            android:contentDescription="@string/text_default"/>
    
    <ImageView
            android:id="@+id/actionbarDivider"
            android:layout_height="35dip"
			android:layout_width="wrap_content"  
			android:layout_centerVertical="true"
			android:layout_marginLeft="5dip"
			android:layout_marginRight="5dip" 
            android:layout_toLeftOf="@id/singleRecordPassButton"
            android:background="@drawable/divider"
            android:contentDescription="@string/text_default" />    
    
    <ImageButton
            android:id="@+id/singleRecordDeleteButton"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:layout_toLeftOf="@id/actionbarDivider"
            android:src="@drawable/icon_cancel"
            android:background="@drawable/actionbar_button"
            android:contentDescription="@string/text_default" />     
</RelativeLayout>