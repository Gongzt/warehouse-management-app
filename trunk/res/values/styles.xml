<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
    </style>
    
    <style name="Widget.ActionBar" parent="android:Widget.Holo.ActionBar">
	    <item name="android:displayOptions">showHome|useLogo|showCustom</item>
	</style>
    
    <style name="Tab" parent="@android:style/Widget.Holo.Tab" >
    </style>
	        
	<style name="DateButton">
	    <item name="android:background">@drawable/date_button</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#999999</item>
	</style>
    
    <style name="ColumnButton">
        <item name="android:background">@drawable/column_button_blue</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#0099cc</item>
    </style>
    
    <style name="ColumnButtonCurent" parent="ColumnButton">
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="ColumnButtonRecord" parent="ColumnButton">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">5dip</item>
    </style>
    
    <style name="ColumnEntryCurrent">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="ColumnEntryRecord">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>
    
    <style name="FormTextfield">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_marginTop">5dip</item>
    </style>

</resources>